@model Teahub.Models.Product;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xóa sản phẩm</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="ProductID">PostID</label>
            <input type="text" class="form-control mb-3" asp-for="ProductID" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="ProductName">Title</label>
            <input type="text" class="form-control mb-3" asp-for="ProductName" disabled>
        </div>
    </div>
    <!-- Begin Form-->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MenuID">
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i>
            Quay lại
        </a>
        <button type="submit" class="btn btn-danger p-2">
            <i class="bi bi-trash-fill"></i>
            Xóa sản phẩm
        </button>
    </form>
    <!--End Form-->
</main>